# JWT Security (REQUIRED in production)
JWT_SECRET=your-strong-jwt-secret-minimum-32-characters

# Session Security (REQUIRED in production)
SESSION_SECRET=your-session-secret-minimum-32-characters

# Data Encryption (REQUIRED in production)
ENCRYPTION_KEY=your-encryption-key-minimum-32-characters

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Application Configuration
NODE_ENV=development
PORT=8000

# Rate Limiting (Optional - defaults provided)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging (Optional)
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=90

# Database (when using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/churnguard

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key
